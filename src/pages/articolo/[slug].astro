---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { fetchArticoliWithSlugs, formatDate, parseDate, stripHtml } from "../../lib/google-sheets";
import { generateArticleSchema } from "../../lib/seo";

const { slug } = Astro.params;
const articoli = await fetchArticoliWithSlugs();
const articolo = articoli.find((a) => a.slug === slug);

if (!articolo) {
  return Astro.redirect("/#blog");
}

const canonicalUrl = new URL(`/articolo/${articolo.slug}`, Astro.site).toString();

// Clean text for meta tags (strip HTML, limit length)
const metaTitle = stripHtml(articolo.titolo);
const metaDescription = stripHtml(articolo.descrizione).slice(0, 160);

const publishedDate = parseDate(articolo.data);
const isoDate = !isNaN(publishedDate.getTime())
  ? publishedDate.toISOString()
  : articolo.data;

const articleSchema = generateArticleSchema({
  headline: metaTitle,
  description: metaDescription,
  url: canonicalUrl,
  image: articolo.immagine,
  datePublished: isoDate,
  author: {
    name: "Dott.ssa Ioana Frale",
    url: Astro.site?.toString() || "",
  },
  publisher: {
    name: "Dott.ssa Ioana Frale - Psicologa Psicoterapeuta",
    logo: new URL("/images/og-default.jpg", Astro.site).toString(),
  },
});

// Related articles: seeded shuffle that rotates daily and varies per article
const otherArticles = articoli.filter((a) => a.slug !== slug);
const currentIndex = articoli.findIndex((a) => a.slug === slug);
const dayOfYear = Math.floor(
  (Date.now() - new Date(new Date().getFullYear(), 0, 0).getTime()) / 86400000
);
const seed = dayOfYear + currentIndex;

function seededShuffle<T>(arr: T[], s: number): T[] {
  const shuffled = [...arr];
  let state = s;
  for (let i = shuffled.length - 1; i > 0; i--) {
    state = (state * 9301 + 49297) % 233280;
    const j = Math.floor((state / 233280) * (i + 1));
    [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
  }
  return shuffled;
}

const relatedArticles = seededShuffle(otherArticles, seed).slice(0, 3);

// Collect article body sections
const sections: { subtitle: string; text: string }[] = [];
if (articolo.sottotitolo1 && articolo.testo1) {
  sections.push({ subtitle: articolo.sottotitolo1, text: articolo.testo1 });
}
if (articolo.sottotitolo2 && articolo.testo2) {
  sections.push({ subtitle: articolo.sottotitolo2, text: articolo.testo2 });
}
if (articolo.sottotitolo3 && articolo.testo3) {
  sections.push({ subtitle: articolo.sottotitolo3, text: articolo.testo3 });
}
if (articolo.sottotitoloconclusione && articolo.testoconclusione) {
  sections.push({
    subtitle: articolo.sottotitoloconclusione,
    text: articolo.testoconclusione,
  });
}

const shareUrls = {
  whatsapp: `https://wa.me/?text=${encodeURIComponent(metaTitle + " " + canonicalUrl)}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(canonicalUrl)}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(canonicalUrl)}`,
};
---

<BaseLayout
  title={`${metaTitle} | Dott.ssa Ioana Frale`}
  description={metaDescription}
  image={articolo.immagine}
  article={{
    publishedTime: isoDate,
    author: "Dott.ssa Ioana Frale",
  }}
>
  <script slot="head" type="application/ld+json" set:html={articleSchema} />

  <article class="pt-24 lg:pt-40 pb-16">
    <div class="container mx-auto px-4 max-w-3xl">

      <!-- Back navigation -->
      <a
        href="/#blog"
        class="inline-flex items-center gap-2 text-primary hover:text-accent transition-colors mb-8 group"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
          stroke-width="2" stroke="currentColor" class="w-5 h-5 group-hover:-translate-x-1 transition-transform">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Torna al Blog
      </a>

      <!-- Hero image -->
      {articolo.immagine && (
        <img
          src={articolo.immagine}
          alt={articolo.titolo}
          class="w-full rounded-2xl mb-8 shadow-lg"
        />
      )}

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-primary mb-4">
        {articolo.titolo}
      </h1>

      <!-- Subtitle -->
      <p class="text-xl text-text/70 mb-4">
        {articolo.sottotitolo}
      </p>

      <!-- Date -->
      <time class="text-sm text-accent block mb-8" datetime={isoDate}>
        {formatDate(articolo.data)}
      </time>

      <!-- Article body -->
      <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:text-primary prose-p:text-text/80">
        <p class="text-lg leading-relaxed" set:html={articolo.descrizione} />

        {sections.map((section) => (
          <>
            <h2 set:html={section.subtitle} />
            <p set:html={section.text} />
          </>
        ))}
      </div>

      <!-- Share Buttons -->
      <div class="mt-12 pt-8 border-t border-primary/10">
        <p class="text-sm font-bold text-text/60 mb-3 uppercase tracking-wide">
          Condividi questo articolo
        </p>
        <div class="flex flex-wrap gap-3">
          <a
            href={shareUrls.whatsapp}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-whatsapp text-white rounded-lg hover:bg-whatsapp/80 transition-colors inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            WhatsApp
          </a>
          <a
            href={shareUrls.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-[#1877F2] text-white rounded-lg hover:bg-[#1877F2]/80 transition-colors inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
          <a
            href={shareUrls.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-[#0A66C2] text-white rounded-lg hover:bg-[#0A66C2]/80 transition-colors inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <button
            id="copy-link-btn"
            class="px-4 py-2 bg-accent text-white rounded-lg hover:bg-accent/80 transition-colors inline-flex items-center gap-2"
            data-url={canonicalUrl}
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
            Copia Link
          </button>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12 bg-primary/5 rounded-2xl p-8 text-center">
        <h3 class="text-2xl font-serif font-bold text-primary mb-3">
          Hai bisogno di supporto?
        </h3>
        <p class="text-text/70 mb-6">
          Prenota un primo colloquio conoscitivo per iniziare il tuo percorso.
        </p>
        <a
          href="/#contatti"
          class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-full hover:bg-primary/90 transition-colors font-semibold"
        >
          Contattami
        </a>
      </div>
    </div>

    <!-- Related Articles -->
    {relatedArticles.length > 0 && (
      <section class="container mx-auto px-4 max-w-5xl mt-16">
        <h2 class="text-3xl font-serif font-bold text-primary mb-8 text-center">
          Potrebbe interessarti anche
        </h2>
        <div class="grid md:grid-cols-3 gap-6">
          {relatedArticles.map((rel) => (
            <a
              href={`/articolo/${rel.slug}`}
              class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition-all hover:-translate-y-1 duration-300 flex flex-col"
            >
              {rel.immagine && (
                <img src={rel.immagine} alt={rel.titolo} class="w-full h-40 object-cover" />
              )}
              <div class="p-4 flex-1 flex flex-col">
                <h3 class="font-serif font-bold text-primary text-lg mb-2">{rel.titolo}</h3>
                <p class="text-sm text-text/70 line-clamp-2 flex-1">{rel.descrizione}</p>
                <time class="text-xs text-accent mt-2">{formatDate(rel.data)}</time>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>

<script>
  const copyBtn = document.getElementById('copy-link-btn');
  if (copyBtn) {
    copyBtn.addEventListener('click', () => {
      const url = copyBtn.getAttribute('data-url') || window.location.href;
      navigator.clipboard.writeText(url).then(() => {
        const originalHTML = copyBtn.innerHTML;
        copyBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
          </svg>
          Copiato!
        `;
        setTimeout(() => {
          copyBtn.innerHTML = originalHTML;
        }, 2000);
      });
    });
  }
</script>
