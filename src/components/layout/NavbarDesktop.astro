---

<header
  id="desktop-navbar"
  class="fixed top-0 left-0 w-full z-50 transition-all duration-300 ease-in-out bg-transparent hidden lg:block"
>
  <!-- Social Bar -->
  <div class="bg-white/95 backdrop-blur-sm border-b border-primary/10 py-3">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-center items-center gap-6">
        <p class="text-sm text-text/70 font-medium m-0">
          Rimaniamo in contatto su:
        </p>
        {
          socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-text/70 hover:text-primary transition-colors group"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
              <span class="text-sm font-medium">{social.name}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Main Navbar -->
  <div class="bg-transparent py-4">
    <div class="container mx-auto px-4 flex justify-between items-center">
      <!-- Logo -->
      <a
        href="#hero"
        class="text-2xl font-serif font-bold text-primary relative group"
      >
        Dott.ssa Ioana Frale
        <span
          class="absolute -bottom-1 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"
        ></span>
      </a>

      <!-- Navigation -->
      <nav>
        <ul class="flex space-x-8 items-center">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="nav-link text-text/80 font-medium hover:text-primary transition-colors text-sm uppercase tracking-wide"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
          <li>
            <WhatsAppButton
              mobileComplete={false}
              customClasses="text-xs px-4 py-2 bg-primary hover:bg-primary/90"
            />
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  import { initScrollSpy } from "../../lib/scroll-spy";

  // Initialize only on client side
  if (typeof window !== "undefined") {
    // Wait for DOM
    document.addEventListener("DOMContentLoaded", () => {
      initScrollSpy(
        "#desktop-navbar",
        ".nav-link",
        "section", // Assumes all scroll targets are <section> tags
        "text-primary",
      );
    });
  }
</script>
