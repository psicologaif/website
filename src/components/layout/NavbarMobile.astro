<!-- Top Social Bar for Mobile -->
<div
  class="fixed top-0 left-0 w-full z-50 bg-white/95 backdrop-blur-sm border-b border-primary/10 py-2 lg:hidden"
>
  <div class="flex justify-center items-center gap-4 px-4">
    {
      socialLinks.map((social) => (
        <a
          href={social.href}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text/70 hover:text-primary transition-colors"
          aria-label={social.name}
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d={social.icon} />
          </svg>
        </a>
      ))
    }
  </div>
</div>

<!-- Bottom Navigation Bar for Mobile -->
<nav
  id="mobile-navbar"
  class="fixed bottom-0 left-0 w-full z-50 bg-white/90 backdrop-blur-lg border-t border-primary/10 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.05)] lg:hidden"
>
  <ul class="flex justify-around items-center h-16">
    {
      navItems.map((item) => (
        <li class="w-full">
          <a
            href={item.href}
            class="mobile-nav-link flex flex-col items-center justify-center h-full text-text/60 hover:text-primary transition-colors gap-1 pt-1"
          >
            <span class="w-6 h-6" set:html={item.icon} />
            <span class="text-[10px] font-medium">{item.name}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<script>
  import { initScrollSpy } from "../../lib/scroll-spy";

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      // Reuse scroll spy but only for active link highlighting
      // Pass a non-existent header selector to skip header transition logic for mobile bar
      initScrollSpy(
        "#non-existent-header",
        ".mobile-nav-link",
        "section",
        "text-primary",
      );
    });
  }
</script>
